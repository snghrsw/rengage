{
  "compilerOptions": {
    "lib": [
      "es5",
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./bin",
    "sourceRoot": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "traceResolution": true,
    "noEmitOnError": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "exclude": [
    "node_modules",
    "typings",
    "./spec",
    "./config"
  ]
}